@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<p>Are you a band or venue?</p>
<input asp-for="Input.UserType" type="radio" id="radioBand" name="account" value="band">
<label for="band">Band</label>
<input asp-for="Input.UserType" type="radio" id="radioVenue" name="account" value="venue">
<label for="venue">Venue</label>

<div class="row">
    <div class="col-md-4">
        <form class="hidden" id="bandForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" >
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="required" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <h4>Band info</h4>
            <div class="form-group">
                <label class="required" asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.State"></label>
                <input asp-for="Input.State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Blurb"></label>
                <textarea asp-for="Input.Blurb" class="form-control"></textarea>
                <span asp-validation-for="Input.Blurb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Website"></label>
                <input asp-for="Input.Website" class="form-control" />
                <span asp-validation-for="Input.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Facebook"></label>
                <input asp-for="Input.Facebook" class="form-control" />
                <span asp-validation-for="Input.Facebook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Instagram"></label>
                <input asp-for="Input.Instagram" class="form-control" />
                <span asp-validation-for="Input.Instagram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Twitter"></label>
                <input asp-for="Input.Twitter" class="form-control" />
                <span asp-validation-for="Input.Twitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Bandcamp"></label>
                <input asp-for="Input.Bandcamp" class="form-control" />
                <span asp-validation-for="Input.Bandcamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Spotify"></label>
                <input asp-for="Input.Spotify" class="form-control" />
                <span asp-validation-for="Input.Spotify" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Youtube"></label>
                <input asp-for="Input.Youtube" class="form-control" />
                <span asp-validation-for="Input.Youtube" class="text-danger"></span>
            </div>
            <input asp-for="Input.UserType" class="hidden" value="band"/>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <form class="hidden" id="venueForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="required" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <h4>Venue info</h4>
            <div class="form-group">
                <label class="required" asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Capacity"></label>
                <input asp-for="Input.Capacity" class="form-control" />
                <span asp-validation-for="Input.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="required" asp-for="Input.State"></label>
                <input asp-for="Input.State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Zip"></label>
                <input asp-for="Input.Zip" class="form-control" />
                <span asp-validation-for="Input.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Address"></label>
                <input asp-for="Input.Address" class="form-control" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Address2"></label>
                <input asp-for="Input.Address2" class="form-control" />
                <span asp-validation-for="Input.Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Blurb"></label>
                <textarea asp-for="Input.Blurb" class="form-control"></textarea>
                <span asp-validation-for="Input.Blurb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Website"></label>
                <input asp-for="Input.Website" class="form-control" />
                <span asp-validation-for="Input.Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Facebook"></label>
                <input asp-for="Input.Facebook" class="form-control" />
                <span asp-validation-for="Input.Facebook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Instagram"></label>
                <input asp-for="Input.Instagram" class="form-control" />
                <span asp-validation-for="Input.Instagram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Twitter"></label>
                <input asp-for="Input.Twitter" class="form-control" />
                <span asp-validation-for="Input.Twitter" class="text-danger"></span>
            </div>
            <input asp-for="Input.UserType" class="hidden" value="venue" />
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
