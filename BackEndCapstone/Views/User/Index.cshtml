@model BackEndCapstone.Models.MapViewModel
@using BackEndCapstone.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<style>
    .container {
        height: 100%;
        width: 100%;
    }

    main {
        display: flex;
        flex-direction: row;
    }

    #map {
        height: 566px;
        width: 800px;
        position: relative;
        z-index: 1;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
        margin-right: 115px;
    }

    #panel {
        left: 62px;
        height: 566px;
        width: 200px;
        background-color: red;
        position: absolute;
        z-index: 2;
    }

    #tourNameForm {
        left: 300px;
        margin: auto;
        justify-content: center;
        z-index: 2;
        position: absolute;
        top: 84px;
    }

    #itinerary {
        right: 100px;
    }

    #tourName {
        margin-bottom: 0px;
        margin-top: -10px;
    }

    .hidden {
        display: none;
    }
</style>

<div class="row">
    <div id="map"></div>
    <div id="panel" class="hidden"></div>
    <form class="form-inline my-2 my-lg-0" id="tourNameForm">
        <input class="form-control mr-sm-2" id="tourNameInput" type="text" name="tourName" placeholder="Enter a tour name">
        <input id="userIdInput" type="hidden" value=@Model.ApplicationUserId />
        <button class="btn btn-secondary my-2 my-sm-0 compSearch" id="tourNameButton">Submit</button>
    </form>
</div>
<div id="itinerary">
    <h1 id="tourName" class="hidden"></h1>
    <div id="cards"></div>
</div>
<script src="~/js/Map.js">IDBCursor</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBedz54CszWCt94vm9gZGAYJdQC5v487nI&callback=initMap"></script>